<%- include('../partials/header.ejs'); %>
<div id="grad1">
    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="offset-md-3 col-md-6 col-sm-12">
          <h1 style="font-family:verdana; color:white">Register Players</h1>
            <form class="form" method="post">
              <div style="font-family:verdana; color:white" class="form-group">
                <label for="PlayerOneTextField">PlayerOne</label>
                <input type="text" class="form-control" id="PlayerOneTextField"
                placeholder="PlayerOne" name="playerone" value="<%= tournament.PlayerOne %>" required>
              </div>
              <div style="font-family:verdana; color:white" class="form-group">
                <label for="PlayerTwoTextField">PlayerTwo</label>
                <input type="text" class="form-control" id="PlayerTwoTextField"
                placeholder="PlayerTwo" name="playertwo" value="<%= tournament.PlayerTwo %>" required>
              </div>

              <div style="font-family:verdana; color:white" class="form-group">
                <label for="PlayerThreeTextField">PlayerThree</label>
                <input type="text" class="form-control" id="PlayerThreeTextField"
                placeholder="PlayerThree" name="playerthree" value="<%= tournament.PlayerThree %>" required>
              </div>

              <div style="font-family:verdana; color:white" class="form-group">
                <label for="PlayerFourTextField">PlayerFour</label>
                <input type="text" class="form-control" id="PlayerFourTextField"
                placeholder="PlayerFour" name="playerfour" value="<%= tournament.PlayerFour %>" required>
              </div>

              <div style="font-family:verdana; color:white" class="form-group">
                <label for="PlayerFiveTextField">PlayerFive</label>
                <input type="text" class="form-control" id="PlayerFiveTextField"
                placeholder="PlayerFive" name="playerfive" value="<%= tournament.PlayerFive %>" required>
              </div>


              <div style="font-family:verdana; color:white" class="form-group">
                <label for="PlayerSixTextField">PlayerSix</label>
                <input type="text" class="form-control" id="PlayerSixTextField"
                placeholder="PlayerSix" name="playersix" value="<%= tournament.PlayerSix %>" required>
              </div>

               <div style="font-family:verdana; color:white" class="form-group">
                <label for="PlayerSevenTextField">PlayerSeven</label>
                <input type="text" class="form-control" id="PlayerSevenTextField"
                placeholder="PlayerSeven" name="playerseven" value="<%= tournament.PlayerSeven %>" required>
              </div>

               <div style="font-family:verdana; color:white" class="form-group">
                <label for="PlayerEightTextField">PlayerEight</label>
                <input type="text" class="form-control" id="PlayerEightTextField"
                placeholder="PlayerEight" name="playereight" value="<%= tournament.PlayerEight %>" required>
              </div>
              
              
              <button type="submit"  class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
              <a href="/tournament" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
            </form>
        </div>
      </div>
    </div>
</div>
<%- include('../partials/footer.ejs'); %>
