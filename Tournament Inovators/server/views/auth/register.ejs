<%- include ('../partials/header') %>

<%- include ('../partials/main_nav') %>

<main class="container">
    <!-- Message Area -->
    <% if(messages.length > 0) {%>
        <div class="alert alert-danger">
            <%= messages %>
        </div>
    <% } %>

    <div class="row">
        <div class="offset-md-4 col-md-4">
            <h1 class="pageLabels">Please <label class="titleLabels">Register</label></h1>
            <form method="POST" autocomplete="off" class="registerform">
                <div class="container" style="background-color:rgb(1, 5, 7)">
                <fieldset class="form-group">
                    <label class="inputLabels" for="username">Username: </label>
                    <input type="text" class="form-control"
                    name="username" placeholder="Enter username"
                    id="username" required autofocus>
                </fieldset>

                <fieldset class="form-group">
                    <label class="inputLabels" for="password">Password: </label>
                    <input type="password" class="form-control"
                    name="password" placeholder="Enter password"
                    id="password" required>
                </fieldset>

                <fieldset class="form-group">
                    <label class="inputLabels" for="email">Email: </label>
                    <input type="email" class="form-control"
                    name="email" placeholder="Enter email address"
                    id="email" required>
                </fieldset>

                <fieldset class="form-group">
                    <label class="inputLabels" for="displayName">Display Name: </label>
                    <input type="text" class="form-control"
                    name="displayName" placeholder="Enter display name"
                    id="displayName" required>
                </fieldset>
                <fieldset class="form-group text-right">
                    <input type="submit" class="registerbtn" value="Register">
                    <a href="/login">
                        <input type="button" class="cancelbtn" value="Cancel">
                    </a>
                </fieldset>
            </div>
            </form>
        </div>
    </div>


</main>





<%- include ('../partials/bottom_nav') %>  

